!!!
%html{ lang:"en" }
  %head
    %meta{ charset: "UTF-8" }
    %meta{ property: "og:title", content: @title }
    %meta{ property: "og:type", content: "product" }

    - if @app
      %meta{ property: "og:site_name", content: @app.name }

    - if @meta_image
      %meta{ property: "og:image", content: @meta_image }

    - if @meta_url
      %meta{ property: "og:url", content: @meta_url }

    %meta{ property: "og:app_id", content: CONFIG.facebook_app_id }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0"}

    %title
      = @title
    = stylesheet_link_tag "application", media: "all"
    = stylesheet_link_tag "card_printing", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{ "data-controller" => controller.controller_path, "data-action" => controller.action_name }
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=487965654580467";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    .container
      = yield
